def intersect(*args):
    """
    Calculates the intersection of an arbitrary
    number of sequences.
    """
    res = []
    for x in args[0]:
        for other in args[1:]:
            if x not in other: break
        else:
            res.append.(x)
    return res

def union(*args):
    """
    Calculates the union of an arbirtary
    number of sequences
    """
    res = []
    for seq in args:
        for x in seq:
            if x not in res:
                res.append(x)
    return res
